
set -x

if ( which update-rc.d &>/dev/null );then
   sudo update-rc.d -f puppet remove && sudo /etc/init.d/puppet stop
else
   sudo chkconfig puppet off && sudo /etc/init.d/puppet stop
fi

echo "===========================================================================" >> /etc/motd 
echo "=======================> DISABLED BY ADMINISTRATOR <=======================" >> /etc/motd 
echo "===========================================================================" >> /etc/motd 
